
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Cập nhật thông tin nhân viên"
        android:textColor="#212121"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:endIconDrawable="@drawable/ic_user"
        app:endIconMode="custom"
        app:hintTextColor="#757575">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtMaNV23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập mã nhân viên"
            android:inputType="text"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/radio_group_background"
        android:elevation="2dp"
        android:orientation="horizontal"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:text="Giới tính:"
            android:textColor="#0313F4"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rdbNam23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="Nam"
                android:textColor="#212121"
                android:textSize="16sp"
                app:buttonTint="#8BC34A"
                app:rippleColor="#009688" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rdbNu23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nữ"
                android:textColor="#212121"
                android:textSize="16sp"
                app:buttonTint="#FF5722"
                app:rippleColor="#80FF5722" />
        </RadioGroup>
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:endIconDrawable="@drawable/ic_hoten"
        app:endIconMode="custom"
        app:hintTextColor="#757575">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtHoVaTen23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập họ tên nhân viên"
            android:inputType="text"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:endIconDrawable="@drawable/ic_calendar"
        app:endIconMode="custom">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtNgaySinh23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="false"
            android:hint="Ngày sinh"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:endIconDrawable="@drawable/ic_calendar"
        app:endIconMode="custom">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtNgayVaoLam23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="false"
            android:hint="Ngày Vào Làm"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:endIconDrawable="@drawable/ic_phone"
        app:endIconMode="custom"
        app:hintTextColor="#757575">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtDienThoai23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:hint="Điện thoại"
            android:inputType="phone"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Chức vụ"
        app:endIconMode="dropdown_menu"
        app:hintTextColor="@color/gray">

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/spinnerChucVu23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:focusable="true"
            android:inputType="none"
            android:padding="12dp"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Phòng Ban"
        app:endIconMode="dropdown_menu"
        app:hintTextColor="@color/gray">

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/spinnerPhong23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:focusable="true"
            android:inputType="none"
            android:padding="12dp"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLuu2"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:text="Lưu"
        android:textColor="#FF5722"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="#4CAF50" />
</LinearLayout>